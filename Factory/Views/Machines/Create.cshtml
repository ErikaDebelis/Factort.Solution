@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a new Machine</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  @Html.Label("Select an Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add New Machine" class="btn btn-success btm-sm" />
}

<h5>@Html.ActionLink("Show all machines", "Index", "Machines") | @Html.ActionLink("Home", "Index", "Home")</h5>