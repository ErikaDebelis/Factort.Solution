@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines Menu</h1>

@if (@Model.Count == 0)
{
  <h3><i class="bi bi-exclamation-triangle"></i> No Machines have been added yet!<i class="bi bi-exclamation-triangle"></i></h3>
}

<ul>
  @foreach (Machine machine in Model)
  {
    @Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })
  }
</ul>

<h5>@Html.ActionLink("Add a new machine", "Create")</h5>