@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineer List</h1>

@if (@Model.Count == 0)
{
  <h3><i class="bi bi-exclamation-triangle"></i>No Engineers have been added yet!<i class="bi bi-exclamation-triangle"></i></h3>
}

<ul>
  @foreach (Engineer engineer in Model)
  {
    <p><i class="bi bi-gear-fill"></i> @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</p>
  }
</ul>

<h5>@Html.ActionLink("Add New Engineer", "Create", "Engineers") | @Html.ActionLink("Add a new machine", "Create", "Machines") | @Html.ActionLink("Main Menu", "Index", "Home")</h5>

