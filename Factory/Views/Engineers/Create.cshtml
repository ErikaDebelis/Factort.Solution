@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a new Engineer</h2>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})
  <button type="submit" value="Add New Engineer" class="btn btn-success btn-sm"><i class="bi bi-person-plus"></i></button>
}

<h5>@Html.ActionLink("Show all Engineers", "Index", "Engineers") | @Html.ActionLink("Home", "Index", "Home")</h5>
